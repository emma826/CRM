<body class="loading" data-layout-color="light" data-layout-mode="default" data-layout-size="fluid"
	data-topbar-color="light" data-leftbar-position="fixed" data-leftbar-color="light" data-leftbar-size='default'
	data-sidebar-user='true'>

	<div class="modal fade" id="email_modal" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title" id="myCenterModalLabel">Create Interaction</h4>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">

					<div class="alert alert-success success" style="display: none;"></div>
					<div class="alert alert-danger error" style="display: none;"></div>

					<div class="form-floating mb-3">
						<input type="text" class="form-control" id="interaction_subject" placeholder="">
						<label for="interaction_subject">Subject</label>
					</div>

					<div class="mb-3">
						<select class="form-select py-2" id="interaction_type">
							<option value="">Type of Interaction</option>
							<option value="note">Note</option>
							<option value="email">Email</option>
							<option value="schedule">Schedule</option>
						</select>
					</div>

					<div class="mb-3">
						<label for="follow_up_date" class="form-label">Follow Up Date</label>
						<input class="form-control py-2" id="follow_up_date" type="date">
					</div>

				</div>

				<div class="modal-footer">
					<button class="btn btn-success py-2 create_interaction">Create</button>
				</div>


			</div>
		</div>
	</div>

	<div id="wrapper">

		<%- include("../includes/navbar") %>

			<%- include("../includes/sidebar") %>

				<div class="content-page">
					<div class="content">

						<div class="container-fluid">

							<div class="clearfix p-2 mt-3">
								<div class="float-end">
									<a class="btn btn-success py-2" href="/interactions/create_interaction">New Interaction</a>
									<button class="btn btn-success py-2" data-bs-toggle="modal" data-bs-target="#email_modal">New Interaction</button>
								</div>


								<div class="row">
									<div class="col-4">
										<div class="form-control">
											<input type="text" style="border: none; outline: none;" class="w-100 py-1"
												placeholder="Search">
										</div>
									</div>

									<div class="col-3">
										<div class="dropdown">
											<button class="btn btn-light py-2 dropdown-toggle" type="button"
												id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true"
												aria-expanded="false">
												Sort <i class="mdi mdi-chevron-down"></i>
											</button>
											<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
												<a class="dropdown-item" href="#">Name</a>
												<a class="dropdown-item" href="#">Date Added</a>
												<hr>
												<a class="dropdown-item" href="#">Ascending</a>
												<a class="dropdown-item" href="#">Descending</a>
											</div>
										</div>
									</div>
								</div>
							</div>

							<div class="card">
								<div class="card-body">
									<div class="dropdown float-end">
										<a href="#" class="dropdown-toggle arrow-none card-drop"
											data-bs-toggle="dropdown" aria-expanded="false">
											<i class="mdi mdi-dots-vertical"></i>
										</a>
										<div class="dropdown-menu dropdown-menu-end">
											<!-- item-->
											<a href="javascript:void(0);" class="dropdown-item">Action</a>
											<!-- item-->
											<a href="javascript:void(0);" class="dropdown-item">Another action</a>
											<!-- item-->
											<a href="javascript:void(0);" class="dropdown-item">Something else</a>
											<!-- item-->
											<a href="javascript:void(0);" class="dropdown-item">Separated link</a>
										</div>
									</div>
									<h2 class="mb-4 header-title">Interaction List</h2>

									<div class="table-responsive">
										<table class="table table-bordered mb-0">
											<thead>
												<tr>
													<th>Interaction Type</th>
													<th>Date</th>
													<th>Subject</th>
													<th>Follow Up Date</th>
													<th></th>
												</tr>
											</thead>
											<tbody class="interaction_container"></tbody>
										</table>
									</div>

								</div>

							</div>

						</div>
					</div>

				</div>

				<!-- Vendor -->
				<script src="/libs/jquery/jquery.min.js"></script>
				<script src="/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
				<script src="/libs/simplebar/simplebar.min.js"></script>
				<script src="/libs/node-waves/waves.min.js"></script>
				<script src="/libs/waypoints/lib/jquery.waypoints.min.js"></script>
				<script src="/libs/jquery.counterup/jquery.counterup.min.js"></script>
